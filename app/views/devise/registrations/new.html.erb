<div class="wrapper2">
  <div class="form container">
    <h2 class='text-center sign-in'>Sign up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "first name" },
                    placeholder: "ex: Bernard"%>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "last name" },
                    placeholder: "ex: Tapie"%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: "ex: nanard@yopmail.com"%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    placeholder: "********"%>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    placeholder: "********" %>
        <%= f.input :photo,
                    required: true %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
      <ul class="list-inline buttons-center">
        <li class="form-actions list-inline-item "><%= f.button :submit, "Sign up", class: "btn btn-validation" %></li>
      </ul>
    <% end %>
  </div>
</div>
