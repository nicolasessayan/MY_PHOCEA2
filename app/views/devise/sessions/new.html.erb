<div class="wrapper1">
  <div class="form container">
    <h2 class='text-center sign-in'>Sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: "ex: nanard@yopmail.com"%>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: "********"%>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <ul class="list-inline buttons-center">
        <li class="form-actions list-inline-item "><%= f.button :submit, "Sign in", class: "btn btn-validation" %></li>
      </ul>
    <% end %>
  </div>
</div>
