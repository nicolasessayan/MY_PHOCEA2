<div class="container">

  <h1>Your bookings</h1>
  <% @mybookings.each do |booking| %>
    <div class="container-show">

      <div class="yacht-img-show">
        <%= cl_image_tag booking.yacht.photo %>
      </div>

      <div class="yacht-info">
        <h1 class="text-center"><%= booking.yacht.name %></h1>
        <h2>About the yacht</h2>
        <ul class="list-inline">
          <li>From <strong><%= booking.start_date.to_s(:rfc822) %></strong> to <strong><%= booking.end_date.to_s(:rfc822) %></strong></h2>
          <% total =  (booking.end_date - booking.start_date)*booking.yacht.price %></li>
          <li><i class="fas fa-anchor"></i>&nbsp;&nbsp;<%= booking.yacht.port %></li>
          <li><i class="fas fa-users"></i>&nbsp;&nbsp;<%= booking.yacht.passengers_capacity %></li>
          <li><i class="fas fa-euro-sign"></i>&nbsp;<strong><%= number_with_delimiter((total*1.2).to_i, separator: " ") %></strong> <em>incl. taxes</em></li>
        </ul>
        <br>
        <h2> About the owner</h2>
        <ul class="list-inline">
          <li>
            <%= cl_image_tag booking.yacht.user.photo, class: "avatar" %>
          </li>
          <li><i class="fas fa-anchor"></i>&nbsp;&nbsp;<%= booking.yacht.user.first_name %></li>
        </ul>
      </div>

    </div>

  <% end %>

</div>
