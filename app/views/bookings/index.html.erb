<div class="container">
  <h1>Your bookings</h1>
  <% @mybookings.each do |booking| %>
    <h3>From <strong><%= booking.start_date.to_s(:rfc822) %></strong> to <strong><%= booking.end_date.to_s(:rfc822) %></strong></h2>
      <% total =  (booking.end_date - booking.start_date)*booking.yacht.price %>
      <p>
        <i class="fas fa-euro-sign"></i>&nbsp;<strong><%= number_with_delimiter((total*1.2).to_i, separator: " ") %></strong> <em>incl. taxes</em>
      </p>
      <div class="cards">
        <div class="card-category">
          <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path booking.yacht.photo %>')">
            <ul class="list-inline">
              <li class="list-inline-item"></li>
            </ul>
          </div>
          <div class="card-description">
            <h2><%= booking.yacht.name %></h2>
            <ul class="list-inline">
              <li class="list-inline-item"><i class="fas fa-anchor"></i>&nbsp;<%= booking.yacht.port %></li>
              <li class="list-inline-item"><i class="fas fa-users"></i>&nbsp;<%= booking.yacht.passengers_capacity %></li>
              <li class="list-inline-item"><i class="fas fa-euro-sign"></i>&nbsp;<%= number_with_delimiter(booking.yacht.price*1.2.to_i, separator: " ") %>/day</li>
            </ul>
          </div>
        </div>
      </div>
      <br>
  <% end %>
</div>
