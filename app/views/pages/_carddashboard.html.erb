<div class="cards">
  <% yachts.each do |yacht| %>
    <div class="card-category" >
      <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path yacht.photo %>')">
        <ul class="list-inline">
          <li class="list-inline-item"></li>
        </ul>
      </div>
      <div class="card-description">
          <ul class="name-edit">
            <li> <h2><%= yacht.name %></h2></li>
          <li>Edit&nbsp; <%= link_to "<i class='fas fa-pen'></i>".html_safe, edit_yacht_path(yacht.id) %></li>
          </ul>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="fas fa-anchor"></i>&nbsp;<%= yacht.port %></li>
          <li class="list-inline-item"><i class="fas fa-users"></i>&nbsp;<%= yacht.passengers_capacity %></li>
          <li class="list-inline-item"><i class="fas fa-euro-sign"></i>&nbsp;<%= number_with_delimiter(yacht.price, separator: " ") %></li>
        </ul>
      </div>
    </div>
    <div class="bookinguser">
      <% yacht.bookings.each do |booking| %>
      <% total =  (booking.end_date - booking.start_date)*booking.yacht.price %></p>
        <p><%= cl_image_tag booking.user.photo, class: "avatarmyyatchs" %></p>
        <p><strong><%= booking.user.first_name %> <%= booking.user.last_name %></strong></p>
        <p><strong>Start date:&nbsp;</strong><%= booking.start_date.to_s(:rfc822) %></p>
        <p><strong>End date:&nbsp;</strong><%= booking.end_date.to_s(:rfc822) %></p>
        <p><strong>Total price:&nbsp;</strong><%= number_with_delimiter((total*1.2).to_i, separator: " ") %></strong> <em><i class="fas fa-euro-sign"></i>&nbsp;&nbsp;incl. taxes</em>
      <% end %>
    </div>
  <% end %>
</div>
