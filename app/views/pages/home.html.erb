<%= render 'banner' %>
<div class="container" id="search-result">
  <% if @yachts.size == Yacht.count %>
    <h1 class="text-center">Our selection of world-class yachts...</h1>
    <%= render 'pages/cards', yachts: @yachts.sample(9) %>
  <% else %>
    <h1 class="text-center">Your selection of yachts</h1>
    <%= render 'pages/cards', yachts: @yachts.limit(9) %>
  <% end %>
  <h1 class="text-center">...available across the world's oceans</h1>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
