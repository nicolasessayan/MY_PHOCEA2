<div class="cards">
  <% yachts.each do |yacht| %>
    <div class="card-category">
      <%= link_to yacht_path(yacht) do %>
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path yacht.photo %>')">
          <ul class="list-inline">
            <li class="list-inline-item"></li>
          </ul>
        </div>
        <div class="card-description">
          <h2><%= yacht.name %></h2>
          <ul class="list-inline">
            <li class="list-inline-item"><i class="fas fa-anchor"></i>&nbsp;<%= yacht.port %></li>
            <li class="list-inline-item"><i class="fas fa-users"></i>&nbsp;<%= yacht.passengers_capacity %></li>
            <li class="list-inline-item"><i class="fas fa-euro-sign"></i>&nbsp;<%= number_with_delimiter(yacht.price, separator: " ") %>/day</li>
          </ul>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
