<div class="cards">
  <% ports.each do |port| %>
    <div class="card-category">
      <%= link_to port_path(port) do %>
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path port.photo %>')">
          <ul class="list-inline">
            <li class="list-inline-item"></li>
          </ul>
        </div>
        <div class="card-description">
          <h2><%= port.name %></h2>
          <ul class="list-inline">
            <li class="list-inline-item"><i class="fas fa-anchor"></i>&nbsp;<%= port.address %></li>
             <li class="list-inline-item"><i class="fas fa-ship"></i>&nbsp;<%= port.yachts.count %></li>
          </ul>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
